#include <iostream>

using namespace std;

int main()
{
    cout << "Enter the number of the month: \n";
    int month = 0;
    cin >> month;

    int year = 0;
    bool isLeap = false;

    if (month == 2)
    {
        cout << "Enter an year: \n";
        cin >> year;

        if ((year % 4 == 0 && year % 100 != 0) || (year % 400))
        {
            isLeap = true;
        }
    }
       
    switch (month)
            {
            case 1:
            case 3:
            case 5:
            case 7:
            case 8:
            case 10:
            case 12:
                cout << "31 days" << endl;
                break;
            case 2:
                switch (isLeap)
                {
                case true:
                    cout << "29 days" << endl;
                    break;

                case false:
                    cout << "28 days" << endl;
                    break;
                }
                break;
            case 4:
            case 6:
            case 9:
            case 11:
                cout << "30 days" << endl;
                break;
            default:
                cout << "Please enter a number between 1 and 12." << endl;
            }

    return 0;
}
